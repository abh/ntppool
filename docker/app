#!/bin/sh

rm -f .nospin.start

app="$@"

if [ "$app" == "" ]; then
  app=./docker-run
  ports="-p 8299:8299"
fi

IMAGE=quay.io/ntppool/ntppool:master

set -ex

docker run -t -i \
 -v $(pwd):/ntppool \
 --env-file=ntppool.env \
 --network ntppool_default \
 $ports \
 --rm \
 $IMAGE ./docker/entrypoint $app
